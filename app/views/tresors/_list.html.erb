<% tresors.each do |tresor| %>
  <div class="cards">
    <% if tresor.prive %>

      <!-- tresor caché -->
      <%= link_to tresor_path(tresor), class: 'no-text-decoration' do %>
        <div class="card">
          <div class="card-body">
            <% if tresor.vendu %>
              <%= cl_image_tag tresor.photo %>
            <% else %>
              <%= image_tag 'lock2.png'%>
            <% end %>
          </div>
          <div class="card-footer-2">
            <div class="p-tresor-titre">
              <% if tresor.vendu %>
                <p class="p-tresor-titre"><span class="mark-vendu">Acquis</span> <%= tresor.titre %></p>
              <% else %>
                <p class="p-tresor-titre">INDICE : « <%= tresor.indice %> »</p>
              <% end %>
            </div>
            <div class="controls controls-tresor-ferme">
              <% if tresor.pirate.photo? %>
                <%= cl_image_tag tresor.pirate.photo, class: 'img-card-username' %>
              <% else %>
                <%= image_tag 'pirate.svg', class: 'img-card-username' %>
              <% end %>
              <p class="p-username-tresor-ferme">
                <%= tresor.pirate.nice_pseudo %>
              </p>
            </div>
            <div>
            <%= render "abordages/status", tresor: tresor %>
            </div>
          </div>
        </div>
      <% end %>

    <% else %>
        <!-- tresor public -->
      <%= link_to tresor_path(tresor), class: 'no-text-decoration' do %>
        <div class="card">
          <div class="card-body">
            <%= cl_image_tag tresor.photo %>
          </div>
          <div class="card-footer">
            <div>
              <p class='p-tresor-titre'><% if tresor.vendu %><span class="mark-vendu">Acquis</span><% end %> <%= tresor.titre %></p>
            </div>
            <div class="controls">
              <% if tresor.pirate.photo? %>
                <%= cl_image_tag tresor.pirate.photo, class: 'img-card-username' %>
              <% else %>
                <%= image_tag 'pirate.svg', class: 'img-card-username' %>
              <% end %>
              <p class="p-username"><%= tresor.pirate.nice_pseudo %></p>
            </div>
            <div>
            <%= render "abordages/status", tresor: tresor %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
<hr>


