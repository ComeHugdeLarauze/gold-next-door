<div class="container">

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="card">
        <div class="card-description">
          <%= cl_image_tag @tresor.photo, height: 200, width: 300, crop: :fill %>
          <h2><%= @tresor.titre %></h2>
          <p><%= @tresor.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center">
   <%= link_to "Supprimer tresor", tresor_path(@tresor), method: :delete, class: 'btn btn-danger' %>
   <%= link_to "home", tresors_path, class: 'btn btn-primary' %>
  </div>
</div>
