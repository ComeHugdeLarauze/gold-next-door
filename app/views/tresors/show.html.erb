<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="card">
      <% if @tresor.prive %>
      <div class="card-description">
        <h2><%= @tresor.indice %></h2>
        <%= image_tag 'coffre_ferme.jpg', height: 200, width: 300, crop: :fill %>
      </div>
      <% else %>
      <div class="card-description">
        <h2><%= @tresor.titre %></h2>
        <%= cl_image_tag @tresor.photo, height: 200, width: 300, crop: :fill %>
        <p><%= @tresor.description %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
