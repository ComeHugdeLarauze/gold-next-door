function refreshAbordageForm(){
  var newAbordageForm = document.getElementById("abordage_message");
  newAbordageForm.value = "";
}

function updateAbordageList(newContent){
  var messages = document.getElementById("messages");
  messages.insertAdjacentHTML("beforeend", newContent);
}


<% if @abordage.errors.any? %>
  refreshAbordageForm();
<% else %>
  // document.getElementById('new-abordage-modal').classList.toggle("hide");
  // document.querySelector('.modal-backdrop').classList.toggle("hide");
  $('#new-abordage-modal').modal('toogle');

  updateAbordageList( '<%= j render "abordages/list_item", abordage: @abordage %>' );
  refreshAbordageForm();
<% end %>
