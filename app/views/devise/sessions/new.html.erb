<div class="container-tresor">
  <h2>Bienvenue Moussaillon !</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: 'Quel est ton email ?' %>
      <%= f.input :password, required: false, label: 'Et ton mot de passe ?' %>
      <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="wide_buttons">
      <%= f.button :submit, "Embarquer âš“", class: 'button yellow' %>
    </div>
    <hr>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
