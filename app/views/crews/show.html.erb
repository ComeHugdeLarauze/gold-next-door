  <% content_for :meta_title, "Rejoins le Crew #{@crew.nom} sur Gold Next Door" %>
  <% content_for :meta_description, "Bienvenue matelot ! Envie de rejoindre cet équipage ?" %>
  <% content_for :meta_image, image_path('gold_next_door.png') %>
<div class="container-tresor">


  <h1 id="nom-crew"><%= @crew.nom %></h1>
  <p><%= @crew.prive? ? 'Est un Groupe privé' : 'Est un groupe Public' %></p>

</div>

<% if CrewPirate.where(pirate_id: current_pirate, crew_id: @crew.id).empty? == false %>
      <h2 id="membre-crew">Membres:</h2>
      <% @crew.pirates.each do |pirate| %>
        <p><%= pirate[:email] %></p>
        <p><%= pirate.tresors.count %> trésor(s)</p>
      <% end %>
    <h2 id="nom-crew" >Tresors du Crew:</h2>
    <%= render "tresors/list", tresors: @crew.tresor.all %>
  <div class="container-tresor">
    <div class="form-actions">
    <%= link_to "Quitter ce crew", crew_crew_pirate_path(@crew, current_pirate), method: :delete, class: 'btn btn-primary' %>
<% else  %>
<% end  %>

<% if  CrewPirate.where(pirate_id: current_pirate, crew_id: @crew.id).empty? %>
  <% if @crew.prive %>
    <!-- cas ou le crew est prive -->
    <%= link_to "Devenir membre de ce crew", new_crew_crew_pirate_path(@crew), class: 'btn btn-primary' %>
  <% else %>
    <!-- cas ou le crew est public -->
    <%= link_to "Devenir membre de ce crew", crew_crew_pirates_path(@crew, @crew_pirate), class: 'btn btn-primary', method: :post %>
  <% end %>

<% end  %>
 </div>
</div>
