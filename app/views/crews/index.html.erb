<% content_for :meta_title, "Tous les Crews de Gold Next Door" %>
<% content_for :meta_description, "Découvre tous les Crews présents sur Gold Next Door. Rejoins tes favoris !" %>
<% content_for :meta_image, image_path('Gold_Next_Door.png') %>

<div class="container-tresor">
  <div class="wide_buttons">
    <%= link_to "Créer un Crew ⚓", new_crew_path, class: 'button yellow' %>
  </div>

  <div class="ou-crew-index">
    <label class="label-crew-index">OU</label>
  </div>

  <% if current_pirate.crews.empty?  %>
  <% flash[:alert] = "T'es dans aucun crew pirate...  Adopte un crew et dévoile tes premiers trésors ! " %>
  <% end %>

  <div class="text-center">
    <h1 class="h1-index-crew">Rejoindre un Crew existants</h1>
  </div>
  <% @crews.each do |crew| %>
    <div class="card-crew">
      <h2><%= link_to  crew.nice_nom, crew_path(crew) %>
        <% if crew.prive %>
          <%= image_tag "ferme.svg", height: 20, width: 20, crop: :fill%>
        <% end %>
          </h2>
      <p class="nombre-pirates-dans-crew"><%= crew.pirates.all.empty? ? 'Ne contient plus de pirate...': "Contient #{crew.pirates.count} pirates" %></p>
      <% if CrewPirate.where(pirate_id: current_pirate, crew_id: crew.id).empty? == false %>
        <p class="part-of-crew">Tu fais partie de ce Crew 😃</p>
      <% else %>
        <p class="not-part-of-crew">Tu n'est pas dans ce Crew 😞</p>
      <% end %>
    </div>
  <% end %>

</div>
