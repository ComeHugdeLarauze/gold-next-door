<div class="navbar-wagon">
  <!-- Logo -->
  <div>
  <%= link_to crews_path, class: "navbar-crew" do %>
    <%= image_tag "treasure-map.svg", height: 50 %>
    <p>#LeWagon</p>
  <% end %>
  </div>

  <div>
  <%= link_to tresors_path  do %>
  <%= image_tag "logo-gnd.png", class: "navbar-logo" %>
  <% end %>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if pirate_signed_in? %>

      <!-- Links when logged in -->

      <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item">
        </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_pirate_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <%= image_tag "profil-pic.png", class: 'avatar', height: 50, data: { toggle: "dropdown" } %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if pirate_signed_in? %>
          <%= link_to destroy_pirate_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        <% else %>
          <li>
            <%= link_to t(".sign_in", default: "Login"), new_pirate_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

